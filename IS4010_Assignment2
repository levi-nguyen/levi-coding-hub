import java.util.Scanner;
public class SimpleInterest {
  public static void main (String[] args)
  {
  Scanner input = new Scanner(System.in);
  //Simple interest = P*r*t
  
  int time=0; //this is t
  double rate= 0.0, principal= 0.0; //this is interest rate and principal
  
  //Allow user to type in desired values
  System.out.println("Enter principal:");
  principal= input.nextInt();
  System.out.println("Enter interest rate:");
  rate= input.nextInt();
  System.out.println("Enter number of periods:");
  time= input.nextInt();
  
    //Calculate the simple interest
 System.out.println("The amount of interest is"+"$"+ ((principal*rate)*time));
  }
}
